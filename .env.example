# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/fee-collector

# Enabled Chains (comma-separated list of chain names matching config/<chain>/ folders)
# Example: polygon,ethereum,arbitrum
# Chain-specific settings (chunkSize, finalityDepth, startBlock, etc.) are in config/<chain>/config.json
ENABLED_CHAINS=polygon,mockChain

# RPC URLs (per chain - chain name must match ENABLED_CHAINS)
POLYGON_RPC=https://polygon-rpc.com
MOCKCHAIN_RPC=http://localhost:8545
# ETHEREUM_RPC=https://eth-rpc.com
# ARBITRUM_RPC=https://arb-rpc.com

# API Configuration
PORT=3000
API_ENABLED=true

# Logging
LOG_LEVEL=info
