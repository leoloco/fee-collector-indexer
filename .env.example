# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
# The application constructs the MongoDB URI from these components
# Works for both local development and Docker deployment
# Format: mongodb://username:password@host:port/database?authSource=admin

MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=<GENERATE_STRONG_PASSWORD_HERE>
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=fee-collector

# =============================================================================
# CHAIN CONFIGURATION
# =============================================================================

# Enabled Chains (comma-separated list of chain names matching config/<chain>/ folders)
# Example: polygon,ethereum,arbitrum
# Chain-specific settings (chunkSize, finalityDepth, startBlock, etc.) are in config/<chain>/config.json
ENABLED_CHAINS=polygon

# =============================================================================
# RPC ENDPOINTS
# =============================================================================
# IMPORTANT: Replace with your own RPC endpoints (Alchemy, Infura, QuickNode, etc.)
# Free tier RPCs have rate limits - use paid tier for production
# Per chain - chain name must match ENABLED_CHAINS

POLYGON_RPC=https://polygon-rpc.com
# ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
# ARBITRUM_RPC=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# =============================================================================
# API CONFIGURATION
# =============================================================================

PORT=3000
API_ENABLED=true

# =============================================================================
# LOGGING
# =============================================================================
# Levels: error, warn, info, debug
# Production: use 'error' or 'warn' to reduce log volume
LOG_LEVEL=info
